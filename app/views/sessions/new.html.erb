<% provide(:title, "Sign in") %>


<div class="row">
  <h1>Sign in</h1>
  <div class="large-6 columns">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit 'Sign in', class: "button radius" %>



        <!--<button onclick="javascript:window.location = '/password_reset/new';"  class="tiny button radius">forgotten password?</button>-->

        <%= link_to "Forgot Password?", new_password_reset_path %>


  <% end %>





    <!-- Horizontal line-->
    <div style="height: 2px; background-color: black; text-align: center">
                <span style="background-color: white; position: relative; top: -0.5em;">
                   OR
                </span>
    </div>
     <br>
    <button onclick="javascript:window.location = '/signup';"  class="button radius">Sign Up now!!</button>

    <h4> Sign in again through facebook</h4>
    <button onclick="javascript:window.location = '/auth/facebook';"  class="button radius btn-facebook"> Login With Facebook</button>





  </div>
</div>