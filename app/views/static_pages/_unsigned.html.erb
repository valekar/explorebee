                          <%# end %>

                      </ul>-->
               <%unless place.place_albums.empty? %>
                <%= image_tag "#{@root_path}#{place.place_albums.first.image_url.to_s}" %>
               <% end %>
             </a>
           </div>
           <div class="panel">
             <%=raw place.description %>
           </div>
         </div>

     <% end %>


