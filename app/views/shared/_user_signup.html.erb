<% provide(:title, 'Sign up') %>

    <%= form_for @user,:html=>{multipart:true}  do |f| %>
        <%= render 'shared/error_messages', object: f.object %>


        <%= f.text_field :name,placeholder:"Your Name"%>


        <%= f.text_field :email,placeholder:"Your Email"%>


        <%= f.password_field :password ,placeholder:"Your Password"%>


        <%= f.password_field :password_confirmation ,placeholder:"Your Password Again"%>

        <%#= f.file_field :image,placeholder:"upload your photo",class:"button" %>


        <div><%= f.submit "Create my account", class: "button radius "  %></div>
    <% end %>
